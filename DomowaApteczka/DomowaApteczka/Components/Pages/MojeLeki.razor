@page "/leki"
@rendermode InteractiveServer
@using DomowaApteczka.Models
@inject DomowaApteczka.Data.IApteczkaRepository Repo

<PageTitle>Moje Leki</PageTitle>

<h1>Moje Leki</h1>

<p>Zobacz, jakie leki aktualnie znajdują się w Twojej apteczce.</p>

@if (!leki.Any())
{
    <p>Brak leków w apteczce.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Nazwa</th>
            <th>Data ważności</th>
            <th>Typ</th>
            <th>Status</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var lek in leki)
        {
            <tr>
                <td>@lek.Nazwa</td>
                <td>@lek.DataWaznosci.ToShortDateString()</td>
                <td>@lek.Typ()</td>
                <td>
                    @if (lek.CzyPrzeterminowany())
                    {
                        <span style="color:red">Przeterminowany</span>
                    }
                </td>
                <td>
                    <button class="btn btn-danger btn-sm"
                            @onclick="() => UsunLek(lek.Id)">
                        Usuń
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<Lek> leki = new();

    protected override void OnInitialized()
    {
        leki = Repo.PobierzWszystkie().ToList();
    }

    private void UsunLek(int id)
    {
        var lek = leki.First(l => l.Id == id);
        Repo.Usun(lek);
        leki.Remove(lek);
    }
}